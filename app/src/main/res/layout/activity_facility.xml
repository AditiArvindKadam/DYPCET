<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FacilityActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/nevi_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/back">
        </ImageView>

        <TextView
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Facility"
            android:fontFamily="@font/lora"
            android:textColor="@color/white"
            android:textSize="20dp">
        </TextView>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/facilities">
        </ImageView>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:background="#F2150E65"
        android:fontFamily="@font/lora"
        android:text="Salient Features of Institute"
        android:textSize="20sp"
        android:gravity="center">
    </TextView>
        <TextView
            android:id="@+id/fac1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="State of Art Infrastructure"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/fac2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="WIFI Enabled Campus"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/fac3"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="Laboratories equipped with equipments and latest technologies"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/fac4"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="Industry-backed Curriculum"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/fac5"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="MoUs with reputed Industries and Academic industries."
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/fac6"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="Excellent Placement Record"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/fac7"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="10000+ Worldwide Alumni Network"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/fac8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="Annumal Student Festivals and a Vibrant Campus Life"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/fac9"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="Bus Facility Available"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/fac10"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#0F018786"
            android:fontFamily="@font/lora"
            android:text="All Govt. Scholarships Available to Students"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>