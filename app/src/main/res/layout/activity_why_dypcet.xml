<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backcolor"
    android:layout_height="match_parent"
    tools:context=".WhyDypcetActivity">
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/nevi_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/back">
        </ImageView>

        <TextView
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Campus Life"
            android:fontFamily="@font/lora"
            android:textColor="@color/white"
            android:textSize="20dp">
        </TextView>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/whydypcet">
        </ImageView>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <androidx.cardview.widget.CardView
            android:id="@+id/virtual_tour"
            app:cardBackgroundColor="@color/branch"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/virtual_tour">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:fontFamily="@font/lora"
                android:text="Click here to watch Virtual Tour Of DYPCET"
                android:gravity="center"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:textSize="19dp"
                android:textColor="@color/white"
                android:textStyle="bold">
            </TextView>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2A0A0A2"
            android:layout_margin="10dp">
        </View>

        <androidx.cardview.widget.CardView
            android:id="@+id/club"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dypcetlogo">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Student Clubs"
                android:fontFamily="@font/lora"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="@color/nevi_1">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cultural"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dance">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Cultural Activity"
                android:fontFamily="@font/lora"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="@color/nevi_1">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sports"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/sports">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Sports Activity"
                android:fontFamily="@font/lora"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="@color/nevi_1">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/nss"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/nss">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="National Service Scheme "
                android:gravity="center"
                android:fontFamily="@font/lora"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="@color/nevi_1">
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ncc"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ncc">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="National Cadet Corps"
                android:fontFamily="@font/lora"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="@color/nevi_1">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/foreign"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/foreign">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Foreign Language Program"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="@color/nevi_1"
                android:fontFamily="@font/lora">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/gdsc"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/gdsc">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Google Developer Student Club"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:fontFamily="@font/lora"
                android:textColor="@color/nevi_1">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rotract"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/rotract">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Rotract Club"
                android:fontFamily="@font/lora"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="@color/nevi_1">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>