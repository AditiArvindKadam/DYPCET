<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nevi_1"
    tools:context=".RegistrationActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                android:background="@drawable/login_edittext"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/registration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Registration"
                        android:fontFamily="@font/lora"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/nevi_1"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="7dp"
                        android:hint="Full Name"
                        android:fontFamily="@font/lora"
                        android:padding="7dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/baseline_email_24"
                        android:drawablePadding="7dp"
                        android:backgroundTint="@color/nevi_1"
                        android:hint="Email ID"
                        android:fontFamily="@font/lora"
                        android:padding="7dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <EditText
                        android:id="@+id/phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/baseline_phone_24"
                        android:drawablePadding="7dp"
                        android:hint="Phone Number"
                        android:backgroundTint="@color/nevi_1"
                        android:inputType="number"
                        android:fontFamily="@font/lora"
                        android:padding="7dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/baseline_location_city_24"
                        android:drawablePadding="7dp"
                        android:hint="State"
                        android:backgroundTint="@color/nevi_1"
                        android:fontFamily="@font/lora"
                        android:inputType="text"
                        android:padding="7dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/baseline_location_city_24"
                        android:drawablePadding="7dp"
                        android:hint="City"
                        android:backgroundTint="@color/nevi_1"
                        android:fontFamily="@font/lora"
                        android:inputType="text"
                        android:padding="7dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lora"
                        android:textSize="12dp"
                        android:textColor="@color/nevi_1"
                        android:text="User Type:(Student / Parent / Alumni)">
                    </TextView>

                    <EditText
                        android:id="@+id/UserType"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/usertype"
                        android:drawablePadding="7dp"
                        android:hint="Student / Parent / Alumni"
                        android:fontFamily="@font/lora"
                        android:inputType="text"
                        android:backgroundTint="@color/nevi_1"
                        android:padding="7dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/lora"
                        android:textColor="@color/nevi_1"

                        android:text="If 12th Student Enter Group:">
                    </TextView>

                    <EditText
                        android:id="@+id/group"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/group"
                        android:drawablePadding="7dp"
                        android:hint="Group e.g PCM or PCB or PCMB"
                        android:fontFamily="@font/lora"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:backgroundTint="@color/nevi_1"
                        android:padding="7dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/baseline_lock_24"
                        android:drawablePadding="7dp"
                        android:hint="Password"
                        android:fontFamily="@font/lora"
                        android:inputType="textPassword"
                        android:textSize="14dp"
                        android:backgroundTint="@color/nevi_1"
                        android:padding="7dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/hint" />

                    <Button
                        android:id="@+id/signUpButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/blue"
                        android:text="Sign up"
                        android:fontFamily="@font/lora"
                        android:textColor="@color/white"
                        android:textColorHint="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/logText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:text="Already Registered?Login here"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/lora"
                android:textSize="14dp">
            </TextView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>