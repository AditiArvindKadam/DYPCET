<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MechanicalActivity">
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/nevi_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/back">
        </ImageView>

        <TextView
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Mechanical"
            android:fontFamily="@font/lora"
            android:textColor="@color/white"
            android:textSize="20dp">
        </TextView>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/career">
        </ImageView>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="#F2150E65"
                android:text="Department of Mechanical Eng."
                android:fontFamily="@font/lora"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="7dp">
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Mechanical Engineering applies the principles of mechanics and energy to the design of machines and devices.">
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Mechanical Engineer deals with Design, Operation and Maintenance of – Machines and its Components, Machine Tools and Manufacturing Systems and Process">
            </TextView>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="270dp"
                android:layout_height="190dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/mechanical_1">
            </ImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="#F2150E65"
                android:fontFamily="@font/lora"
                android:text="Mechanical  Engineering – Scope"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="7dp">
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Engineering Industry of all kinds."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Automobile Engineering.">
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Maintenance of Plants in Process Industry."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Textile, Chemical, Food processing, Pharmacy etc."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Manufacturing Sector."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Armed Forces, Defense Industry, Space Research."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Emerging Field of Mechatronics."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Growing Areas of CAD/CAM/CAE."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:text="> Robotics and Automation"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:fontFamily="@font/lora"
                android:layout_marginBottom="10dp"
                android:text="> UPSC and MPSC"
                >
            </TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="#F2150E65"
                android:fontFamily="@font/lora"
                android:text="Mechanical Engineering Streams"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="7dp">
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lora"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="> Production"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:fontFamily="@font/lora"
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="> Design">
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lora"
                android:padding="5dp"
                android:text="> Mechatronics"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lora"
                android:padding="5dp"
                android:text="> Automobile"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:fontFamily="@font/lora"
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="> Manufacturing Sector."
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lora"
                android:padding="5dp"
                android:text="> Heat Power"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0F018786"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lora"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="> CAD/CAM/CAE"
                >
            </TextView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>